- if @restaurants.all.any?
  - @restaurants.all.each do |restaurant|
    %h2= link_to restaurant.name, restaurant_path(restaurant)
    - if current_user == restaurant.user 
      %h2= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
      %h2= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
    %h2= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
    %p= restaurant.reviews.first.thoughts if restaurant.reviews.any?

- else
  %h1 No restaurants yet!

%a(href=new_restaurant_path) Add a restaurant
